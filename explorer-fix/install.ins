[Initial]
Message=Installiere Explorer-Fix
DefVar $ExitCode$

[Aktionen]
ShowBitmap "%ScriptPath%\logo.png" "Explorer-Fix"
Files_Setup
Sub_HandleExitCode

[Files_Setup]
copy -s "%ScriptPath%\data\*" "%CommonStartupDir%"

[Sub_HandleExitCode]
; check return code
Set $ExitCode$ = GetLastExitCode
comment "GetLastExitCode: " + $ExitCode$
if not($ExitCode$ = "0")
  LogError "Fatal: setup returned exit code " + $ExitCode$
  IsFatalError
endif